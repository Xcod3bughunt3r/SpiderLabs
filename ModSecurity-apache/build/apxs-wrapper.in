#!@SHELL@

WRAPPED_OPTS=""
for opt in "$@"; do
    case "$opt" in
        # Fix for -R not working w/apxs
        -R*) WRAPPED_OPTS="$WRAPPED_OPTS -Wl,$opt" ;;
        # OSF1 compiler option
        -pthread) WRAPPED_OPTS="$WRAPPED_OPTS -Wc,$opt" ;;
        # Unwrapped
        *) WRAPPED_OPTS="$WRAPPED_OPTS $opt" ;;
    esac
done

exec @APXS@ -Wc,-fPIC -Wc,-O0 -a -c -I @V3INCLUDE@ -L @V3LIB@ -lmodsecurity src/mod_security3.c src/msc_config.c src/msc_filters.c src/msc_utils.c
